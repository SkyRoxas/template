extends member.pug

mixin th(text)
  if(text=="")
    th.p-2.visible-xs
      div.p-3.card-radius=text
  else
    th.p-2
      div.bg-third.p-3.card-radius=text

mixin td(text,type)
  if(type === 'img')
    td.px-4
      div
        img(src=text width="45px")
  else
    td.py-4.px-4=text

mixin infoItem(label,text,arrow)
  if(arrow!=="right")
    .wrap.d-flex.align-items-center.p-1.bg-four
      div(style="width:90px").px-1=label
      input.col.bg-first.px-2.no-br.py-2(value=text disabled="disabled")
  else
    .wrap.d-flex.align-items-center.p-1.bg-first
      div(style="width:80px").px-1=label
      input.col.bg-four.px-2.no-br.py-2(value=text disabled="disabled")


mixin tr
  tr
    +td('2017-01-28 14:00')
    +td('QN23463822')
    +td('捐錢還永生')
    +td('耶穌')
    +td('$100')
    +td('信用卡')
    +td('已付款')
    +td('./images/member.png','img')
  tr.detail
    td(colspan="8")
      .container.view
        form.row
          div.col-9.bg-first.p-4.card-radius
            div.d-flex.mb-3(style="width:100%;")
              div
                +infoItem('贊助人名稱','耶穌')
              div.col.pr-0
                +infoItem('寄送地址','(100) 台北市 中正區 重慶南路一段1號1樓')
            div.d-flex.mb-3
              div
                +infoItem('聯絡電話','0912-345-678')
              div.col.pr-0
                +infoItem('電子郵件','arronwu@webacker.com')
            div.d-flex.mb-3
              div.col.p-0
                +infoItem('備註','有耶穌快看')
            div.d-flex
              div.col.pl-0
                +infoItem('ATM 繳費帳號','23282-2838-2393-2833')
              div.pr-0
                +infoItem('付款狀態','已付款')
          div.col-3
            h3.mb-3 配送狀態
            div.mb-3
              +infoItem('配送單位','耶穌','right')
            div.mb-3
              +infoItem('單號','QW34234234','right')

block content
  .container.p-0
    div.overflow-x.my-2
      table.my-5
        thead
          tr.bg-first.card-radiu
            +th('交易日期')
            +th('訂單編號')
            +th('贊助方案')
            +th('贊助人名稱')
            +th('贊助金額')
            +th('付款方式')
            +th('付款狀態')
            +th('')
        tbody
          +tr
          +tr
          +tr
          +tr
          +tr

      div
        include components/pagger
