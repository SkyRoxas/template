extends member.pug

mixin th(text)
  if(text=="")
    th.p-2.visible-xs
      div.p-3.card-radius=text
  else
    th.p-2
      div.bg-third.p-3.card-radius=text
      
mixin td(text)
  td=text


block content
  .container
    div.my-2
      table
        tr.bg-first.card-radiu.p-3
          +th('交易日期')
          +th('訂單編號')
          +th('贊助活動')
          +th('交易日期')
          +th('贊助方案')
          +th('贊助金額')
          +th('付款方式')
          +th('付款狀態')
          +th('')
        tr
          +td('2017-01-28 14:00')
          +td('QN23463822')
          +td('捐錢還永生')
          +td('耶穌')
          +td('$100')
          +td('信用卡')
          +td('已付款')
      div
        include components/pagger
