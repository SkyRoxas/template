mixin headerMenuItem(name,href)
  li.menu-item
    a.d-flex.align-items-center(href=href)= name

header#header
  div.header_wrapper
    .wrap.d-flex.justify-content-between
      .d-flex.align-items-center
        div.logo.mr-2
          div.img_wrap
            a(href="/")
              img(src="./images/logo.png" width="230px")
        div
          a(href="/")
            img(src="./images/company.png" width="170px")
        div.left_links.ml-2
          ul.d-flex
            +headerMenuItem('首頁','/')
            +headerMenuItem('瀏覽直播','/')
            +headerMenuItem('教學','/')
      div.right_links
        div.d-flex
          div.search
            form
              input.search_field(type="text" placeholder="search")
              input.submit(type="button")
          a.register_login(href="/") 註冊/登入
